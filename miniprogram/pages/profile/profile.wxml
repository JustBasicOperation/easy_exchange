<view class="container">
  <!-- 未登录状态 -->
  <view class="login-container" wx:if="{{!isLoggedIn}}">
    <image class="avatar-placeholder" src="../../images/user/avatar-placeholder.png"></image>
    <view class="login-tips">登录后体验更多功能</view>
    <button class="login-btn" bindtap="handleUserLogin" type="primary">微信登录</button>
  </view>

  <!-- 已登录状态 -->
  <view class="user-info" wx:else>
    <view class="user-header">
      <image class="user-avatar" src="{{userInfo.avatarUrl}}"></image>
      <view class="user-detail">
        <text class="user-name">{{userInfo.nickName}}</text>
        <text class="user-id">ID: {{openid}}</text>
      </view>
      <view class="edit-profile-btn" bindtap="showEditProfile">编辑资料</view>
    </view>
    
    <!-- 个人资料信息 -->
    <view class="profile-info" wx:if="{{userProfile.realName || userProfile.contactNumber || userProfile.school || userProfile.city}}">
      <view class="profile-item" wx:if="{{userProfile.realName}}">
        <text class="profile-label">姓名：</text>
        <text class="profile-value">{{userProfile.realName}}</text>
      </view>
      <view class="profile-item" wx:if="{{userProfile.contactNumber}}">
        <text class="profile-label">联系方式：</text>
        <text class="profile-value">{{userProfile.contactNumber}}</text>
      </view>
      <view class="profile-item" wx:if="{{userProfile.school}}">
        <text class="profile-label">所在学校：</text>
        <text class="profile-value">{{userProfile.school}}</text>
      </view>
      <view class="profile-item" wx:if="{{userProfile.city}}">
        <text class="profile-label">所在城市：</text>
        <text class="profile-value">{{userProfile.city}}</text>
      </view>
    </view>
  </view>

  <!-- 编辑个人资料弹窗 -->
  <view class="profile-form-mask" wx:if="{{showProfileForm}}" bindtap="hideEditProfile"></view>
  <view class="profile-form" wx:if="{{showProfileForm}}">
    <view class="form-header">
      <text class="form-title">编辑个人资料</text>
      <view class="form-close" bindtap="hideEditProfile">×</view>
    </view>
    <view class="form-content">
      <view class="form-item">
        <text class="form-label">姓名</text>
        <input class="form-input" value="{{userProfile.realName}}" placeholder="请输入姓名" data-field="realName" bindinput="onInputChange" />
      </view>
      <view class="form-item">
        <text class="form-label">联系方式</text>
        <input class="form-input" value="{{userProfile.contactNumber}}" placeholder="请输入联系方式" data-field="contactNumber" bindinput="onInputChange" />
      </view>
      <view class="form-item">
        <text class="form-label">所在学校</text>
        <input class="form-input" value="{{userProfile.school}}" placeholder="请输入所在学校" data-field="school" bindinput="onInputChange" />
      </view>
      <view class="form-item">
        <text class="form-label">所在城市</text>
        <input class="form-input" value="{{userProfile.city}}" placeholder="请输入所在城市" data-field="city" bindinput="onInputChange" />
      </view>
    </view>
    <view class="form-footer">
      <button class="cancel-btn" bindtap="hideEditProfile">取消</button>
      <button class="save-btn" bindtap="saveProfile">保存</button>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="navigateTo" data-url="../my-items/my-items">
      <image class="menu-icon" src="../../images/icon/my-items.png"></image>
      <text class="menu-text">我的发布</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../favorites/favorites">
      <image class="menu-icon" src="../../images/icon/my-favorites.png"></image>
      <text class="menu-text">我的收藏</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../myOrders/myOrders">
      <image class="menu-icon" src="../../images/icon/my-orders.png"></image>
      <text class="menu-text">我的订单</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="navigateTo" data-url="../settings/settings">
      <image class="menu-icon" src="../../images/icon/settings.png"></image>
      <text class="menu-text">设置</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../feedback/feedback">
      <image class="menu-icon" src="../../images/icon/feedback.png"></image>
      <text class="menu-text">意见反馈</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../about/about">
      <image class="menu-icon" src="../../images/icon/about.png"></image>
      <text class="menu-text">关于我们</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <view class="logout-btn" wx:if="{{isLoggedIn}}" bindtap="logout">退出登录</view>
</view>