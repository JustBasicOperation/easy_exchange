.container {
  padding: 20rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-group label {
  display: block;
  margin-bottom: 10rpx;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.picker {
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
}

.image-uploader {
  display: flex;
  flex-wrap: wrap;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 60rpx;
  color: #ccc;
}