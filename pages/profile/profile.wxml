<view class="container">
  <!-- 未登录状态 -->
  <view class="login-container" wx:if="{{!isLoggedIn}}">
    <image class="avatar-placeholder" src="../../images/avatar-placeholder.png"></image>
    <view class="login-tips">登录后体验更多功能</view>
    <button class="login-btn" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">微信登录</button>
  </view>

  <!-- 已登录状态 -->
  <view class="user-info" wx:else>
    <view class="user-header">
      <image class="user-avatar" src="{{userInfo.avatarUrl}}"></image>
      <view class="user-detail">
        <text class="user-name">{{userInfo.nickName}}</text>
        <text class="user-id">ID: {{openid}}</text>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-list">
    <view class="menu-item" bindtap="navigateTo" data-url="../myItems/myItems">
      <image class="menu-icon" src="../../images/icon/my-items.png"></image>
      <text class="menu-text">我的发布</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../myFavorites/myFavorites">
      <image class="menu-icon" src="../../images/icon/my-favorites.png"></image>
      <text class="menu-text">我的收藏</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../myOrders/myOrders">
      <image class="menu-icon" src="../../images/icon/my-orders.png"></image>
      <text class="menu-text">我的订单</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
  </view>

  <view class="menu-list">
    <view class="menu-item" bindtap="navigateTo" data-url="../settings/settings">
      <image class="menu-icon" src="../../images/icon/settings.png"></image>
      <text class="menu-text">设置</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../feedback/feedback">
      <image class="menu-icon" src="../../images/icon/feedback.png"></image>
      <text class="menu-text">意见反馈</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-url="../about/about">
      <image class="menu-icon" src="../../images/icon/about.png"></image>
      <text class="menu-text">关于我们</text>
      <image class="arrow-right" src="../../images/icon/arrow-right.png"></image>
    </view>
  </view>

  <!-- 退出登录按钮 -->
  <view class="logout-btn" wx:if="{{isLoggedIn}}" bindtap="logout">退出登录</view>
</view>